@model TicketSystemWebApp.Models.TicketViewModel
<div id="titleUpdateModal" tabindex="-1" aria-labelledby="titleUpdateModalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Zmień temat</h5>
                <button type="button" data-mdb-dismiss="modal" aria-label="Close" class="btn-close shadow-none"></button>
            </div>
            @using (Html.BeginForm("titleupdate", "tickets", FormMethod.Post, new { @id = "formTitleUpdate" }))
            {
                <div class="modal-body">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Title, null, new { @maxlength = "75", @class = "form-control shadow-none" })
                        <span class="text-danger">To pole jest wymagane</span>
                    </div>
                    <div class="form-group">
                        @Html.Hidden("ticketID", Model.TicketID)
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-mdb-dismiss="modal" class="btn btn-danger">Anuluj</button>
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            }
        </div>
    </div>
</div>